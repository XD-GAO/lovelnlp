<body>
    <div class="container">
        <!-- È¶ñÈ°µ -->
        <div id="homePage">
            <h1>ÂçïËØçÂ≠¶‰π†Á≥ªÁªü</h1>
            <div class="mode-select">
                <button onclick="showMode('browse')">üìñ ÂçïËØçÊµèËßà</button>
                <button onclick="showMode('test')">üìù ËÆ∞ÂøÜÊµãËØï</button>
            </div>
        </div>

        <!-- ÊµèËßàÊ®°Âºè -->
        <div id="browseMode" class="mode-panel" style="display: none;">
            <h2>ÂçïËØçÊµèËßà</h2>
            <button class="back-btn" onclick="backToHome()">‚Üê ËøîÂõûÈ¶ñÈ°µ</button>
            <div class="word-list" id="wordList"></div>
        </div>

        <!-- ÊµãËØïÊ®°Âºè -->
        <div id="testMode" class="mode-panel" style="display: none;">
            <h2>ËÆ∞ÂøÜÊµãËØï</h2>
            <button class="back-btn" onclick="backToHome()">‚Üê ËøîÂõûÈ¶ñÈ°µ</button>
            <div class="test-card">
                <div id="currentWord"></div>
                <div id="answer"></div>
                <div class="controls">
                    <button onclick="showAnswer()">üîç ÊòæÁ§∫Á≠îÊ°à</button>
                    <button onclick="nextWord()">‚û°Ô∏è Êç¢ËØç</button>
                    <button onclick="speakCurrentWord('en-GB')">üîä Ëã±ÂºèÂèëÈü≥</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const presetWords = [
            { word: "apple", translation: "ËãπÊûú" },
            { word: "go", translation: "Ëµ∞" },
            { word: "easy", translation: "ÁÆÄÂçï" },
            { word: "hard", translation: "Èöæ" }
        ];

        let currentWord = null;

        // ÂèëÈü≥ÂäüËÉΩ
        function speakWord(word, accent = 'en-GB') {
            const synth = window.speechSynthesis;
            const utterance = new SpeechSynthesisUtterance(word);
            utterance.lang = accent;
            
            // Â∞ùËØïËé∑ÂèñËã±ÂºèÂèëÈü≥
            const voices = synth.getVoices();
            const ukVoice = voices.find(voice => 
                voice.lang === 'en-GB' && voice.name.includes('Male')
            );
            
            if(ukVoice) {
                utterance.voice = ukVoice;
                utterance.lang = 'en-GB';
            }
            
            synth.speak(utterance);
        }

        // ÊµèËßàÊ®°ÂºèÂàóË°®Ê∏≤Êüì
        function renderWordList() {
            const listContainer = document.getElementById('wordList');
            listContainer.innerHTML = presetWords.map(word => `
                <div class="word-item">
                    <div class="word-info">
                        <span class="word-name">${word.word}</span>
                        <span class="word-translation">${word.translation}</span>
                    </div>
                    <button class="pronounce-btn" 
                            onclick="speakWord('${word.word}', 'en-GB')"
                            title="Ëã±ÂºèÂèëÈü≥">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-5-9h10v2H7z"/>
                        </svg>
                    </button>
                </div>
            `).join('');
        }

        // ÂàùÂßãÂåñÊó∂Âä†ËΩΩËØ≠Èü≥
        window.speechSynthesis.onvoiceschanged = function() {
            if(window.speechSynthesis.getVoices().length > 0) {
                renderWordList();
            }
        };

        // ÊòæÁ§∫Á≠îÊ°à
        function showAnswer() {
            const answerElement = document.getElementById('answer');
            answerElement.textContent = currentWord.translation;
        }

        // Êç¢ËØç
        function nextWord() {
            const answerElement = document.getElementById('answer');
            answerElement.textContent = '';
            
            currentWord = presetWords[Math.floor(Math.random() * presetWords.length)];
            document.getElementById('currentWord').textContent = currentWord.word;
        }

        // ÊòæÁ§∫ÂΩìÂâçÂçïËØçÁöÑÂèëÈü≥
        function speakCurrentWord(accent) {
            if (currentWord) {
                speakWord(currentWord.word, accent);
            }
        }

        // ÂàáÊç¢Ê®°Âºè
        function showMode(mode) {
            document.getElementById('homePage').style.display = 'none';
            document.getElementById('browseMode').style.display = 'none';
            document.getElementById('testMode').style.display = 'none';
            
            document.getElementById(mode + 'Mode').style.display = 'block';
            
            if (mode === 'test') {
                nextWord();
            } else if (mode === 'browse') {
                renderWordList();
            }
        }

        // ËøîÂõûÈ¶ñÈ°µ
        function backToHome() {
            document.getElementById('homePage').style.display = 'block';
            document.getElementById('browseMode').style.display = 'none';
            document.getElementById('testMode').style.display = 'none';
        }
    </script>
</body>
</html>
